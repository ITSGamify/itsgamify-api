<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<system.webServer>
		<httpProtocol>
			<customHeaders>
				<!-- CORS HEADERS -->
				<add name="Access-Control-Allow-Origin" value="*" />
				<add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
				<add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />

			</customHeaders>
		</httpProtocol>

		<!-- Allow IIS to process OPTIONS preflight requests -->
		<handlers>
			<add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified"/>
			<add name="OptionsVerbHandler" path="*" verb="OPTIONS" modules="IsapiModule" scriptProcessor="%windir%\System32\inetsrv\asp.dll" resourceType="Unspecified" requireAccess="None" preCondition="classicMode,runtimeVersionv4.0,bitness64" />
		</handlers>
		<aspNetCore processPath="dotnet" arguments="its.gamify.api.dll" stdoutLogEnabled="true" stdoutLogFile=".\logs\stdout" hostingModel="inprocess"/>
	</system.webServer>
</configuration>